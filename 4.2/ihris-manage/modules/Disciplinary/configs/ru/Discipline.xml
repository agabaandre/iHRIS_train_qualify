<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="disciplinary_action" path="/I2CE">
  <metadata>
    <version>4.2.2.0.1</version>
  </metadata>
  <configurationGroup name="disciplinary_action" path="/I2CE" locale="ru">
    <version>4.2.0.1</version>
    <configurationGroup name="invalid_formfield_message" path="/modules/forms/formfield_messages" locale="ru">
      <configuration name="disciplinary_date" path="disciplinary_action/end_date/bad_date">
        <value>Дата конца должна быть позже даты начала.</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description">
      <configuration name="person_can_edit_child_form_disciplinary_action" locale="ru"></configuration>
      <configuration name="person_can_view_child_form_disciplinary_action" locale="ru"></configuration>
      <configuration name="can_edit_database_list_disciplinary_action_type" locale="ru">
        <value>Редактировать список типов дисциплинарных мер</value>
      </configuration>
      <configuration name="can_view_database_list_disciplinary_action_type" locale="ru">
        <value>Посмотреть список типов дисциплинарных мер</value>
      </configuration>
      <configuration name="can_edit_database_list_disciplinary_action_reason" locale="ru"></configuration>
      <configuration name="can_view_database_list_disciplinary_action_reason" locale="ru"></configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="disciplinary_action">
          <configuration name="display" values="single" locale="ru">
            <value>Дисциплинарная мера</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="disciplinary_action_type">
          <configuration name="display" values="single" locale="ru">
            <value>Тип дисциплинарной меры</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="disciplinary_action_reason">
          <configuration name="display" values="single" locale="ru"></configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_DisciplinaryAction">
          <configurationGroup name="fields">
            <configurationGroup name="action_date">
              <configuration name="headers" type="delimited" locale="ru">
                <value>default:Дата обсуждения</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="disciplinary_action_type">
              <configuration name="headers" type="delimited" locale="ru">
                <value>default:Принятые меры</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="disciplinary_action_reason">
              <configuration name="headers" type="delimited" locale="ru">
                <value>default:Причина действия</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="start_date">
              <configuration name="headers" type="delimited" locale="ru">
                <value>default:Начало Применимости</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="end_date">
              <configuration name="headers" type="delimited" locale="ru">
                <value>default:Конец Применимости</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="notes">
              <configuration name="headers" type="delimited" locale="ru">
                <value>default:Примечания</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="persons_present">
              <configuration name="headers" type="delimited" locale="ru">
                <value>default:Присутствующие</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="editAction" path="/modules/disciplinary_action/page/editAction">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="ru">
            <value>Добавить/обновить дисциплинарные меры</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>