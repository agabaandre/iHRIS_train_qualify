<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="disciplinary_action" path="/I2CE">
  <metadata>
    <version>4.3.0.1</version>
  </metadata>
  <configurationGroup name="disciplinary_action" path="/I2CE" locale="it">
    <version>4.3.0.1</version>
    <configurationGroup name="invalid_formfield_message" path="/modules/forms/formfield_messages" locale="it">
      <configuration name="disciplinary_date" path="disciplinary_action/end_date/bad_date">
        <value>La data di fine deve essere successiva alla data di inizio.</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description">
      <configuration name="person_can_edit_child_form_disciplinary_action" locale="it">
        <value>Modifica gli infortuni sul lavoro e le azioni disciplinari assegnati a una persona</value>
      </configuration>
      <configuration name="person_can_view_child_form_disciplinary_action" locale="it">
        <value>Visualizza gli infortuni sul lavoro e le azioni disciplinari assegnati a una persona</value>
      </configuration>
      <configuration name="can_edit_database_list_disciplinary_action_type" locale="it">
        <value>Modifica l'elenco delle tipologie di azioni disciplinari</value>
      </configuration>
      <configuration name="can_view_database_list_disciplinary_action_type" locale="it">
        <value>Visualizza la lista di tipo disciplinary_action per lo spazio di lavoro</value>
      </configuration>
      <configuration name="can_edit_database_list_disciplinary_action_reason" locale="it">
        <value>Modificare la lista con le motivazioni riguardo le azioni disciplinari sul luogo di lavoro</value>
      </configuration>
      <configuration name="can_view_database_list_disciplinary_action_reason" locale="it">
        <value>Visualizza la lista con le motivazioni riguardo le azioni disciplinari sul luogo di lavoro</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="disciplinary_action">
          <configuration name="display" values="single" locale="it">
            <value>Azione disciplinare</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="disciplinary_action_type">
          <configuration name="display" values="single" locale="it">
            <value>Tipo di azione disciplinare</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="disciplinary_action_reason">
          <configuration name="display" values="single" locale="it">
            <value>Motivazioni riguardo le azioni disciplinari</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_DisciplinaryAction">
          <configurationGroup name="fields">
            <configurationGroup name="action_date">
              <configuration name="headers" type="delimited" locale="it">
                <value>default:Data della discussione</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="disciplinary_action_type">
              <configuration name="headers" type="delimited" locale="it">
                <value>default:Azione intrapresa</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="disciplinary_action_reason">
              <configuration name="headers" type="delimited" locale="it">
                <value>default:Motivazioni riguardo le azioni</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="start_date">
              <configuration name="headers" type="delimited" locale="it">
                <value>default:Inizio dell'applicabilità</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="end_date">
              <configuration name="headers" type="delimited" locale="it">
                <value>default:Fine dell'applicabilità</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="notes">
              <configuration name="headers" type="delimited" locale="it">
                <value>default:Note</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="persons_present">
              <configuration name="headers" type="delimited" locale="it">
                <value>default:Persone presenti</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="editAction" path="/modules/disciplinary_action/page/editAction">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="it">
            <value>Aggiungi/aggiorna azione disciplinare</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>