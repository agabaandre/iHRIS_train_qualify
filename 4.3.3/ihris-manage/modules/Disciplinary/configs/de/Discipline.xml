<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="disciplinary_action" path="/I2CE">
  <metadata>
    <version>4.3.0.1</version>
  </metadata>
  <configurationGroup name="disciplinary_action" path="/I2CE" locale="de">
    <version>4.3.0.1</version>
    <configurationGroup name="invalid_formfield_message" path="/modules/forms/formfield_messages" locale="de">
      <configuration name="disciplinary_date" path="disciplinary_action/end_date/bad_date">
        <value>Das Enddatum muss nach dem Anfangsdatum liegen.</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description">
      <configuration name="person_can_edit_child_form_disciplinary_action" locale="de">
        <value>Kann die Arbeitsunfälle und Disziplinarmaßnahmen, die einem Mitarbeiter zugeordnet wurden, bearbeiten</value>
      </configuration>
      <configuration name="person_can_view_child_form_disciplinary_action" locale="de">
        <value>Kann die Arbeitsunfälle und Disziplinarmaßnahmen, die einem Mitarbeiter zugeordnet wurden, einsehen</value>
      </configuration>
      <configuration name="can_edit_database_list_disciplinary_action_type" locale="de">
        <value>Die Liste der Arten von Disziplinarmaßnahmen bearbeiten</value>
      </configuration>
      <configuration name="can_view_database_list_disciplinary_action_type" locale="de">
        <value>Die Liste der Arten von Disziplinarmaßnahmen einsehen</value>
      </configuration>
      <configuration name="can_edit_database_list_disciplinary_action_reason" locale="de">
        <value>Die Liste der Gründe für die Arten von Disziplinarmaßnahmen bearbeiten</value>
      </configuration>
      <configuration name="can_view_database_list_disciplinary_action_reason" locale="de">
        <value>Die Liste der Gründe für die Arten von Disziplinarmaßnahmen einsehen</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="disciplinary_action">
          <configuration name="display" values="single" locale="de">
            <value>Disziplinarmaßnahme</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="disciplinary_action_type">
          <configuration name="display" values="single" locale="de">
            <value>Art der Disziplinarmaßnahme</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="disciplinary_action_reason">
          <configuration name="display" values="single" locale="de">
            <value>Grund der Disziplinarmaßnahme</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_DisciplinaryAction">
          <configurationGroup name="fields">
            <configurationGroup name="action_date">
              <configuration name="headers" type="delimited" locale="de">
                <value>default:Datum der Besprechung</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="disciplinary_action_type">
              <configuration name="headers" type="delimited" locale="de">
                <value>default:Veranlasste Maßnahme</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="disciplinary_action_reason">
              <configuration name="headers" type="delimited" locale="de">
                <value>default:Grund für die Maßnahme</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="start_date">
              <configuration name="headers" type="delimited" locale="de">
                <value>default:Nutzungsanfang</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="end_date">
              <configuration name="headers" type="delimited" locale="de">
                <value>default:Nutzungsende</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="notes">
              <configuration name="headers" type="delimited" locale="de">
                <value>default:Notizen</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="persons_present">
              <configuration name="headers" type="delimited" locale="de">
                <value>default:Anwesende</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="editAction" path="/modules/disciplinary_action/page/editAction">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="de">
            <value>Disziplinarmaßnahme hinzufügen oder aktualisieren</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>