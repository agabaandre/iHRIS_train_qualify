<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="disciplinary_action" path="/I2CE">
  <metadata>
    <version>4.3.0.1</version>
  </metadata>
  <configurationGroup name="disciplinary_action" path="/I2CE" locale="gl">
    <version>4.3.0.1</version>
    <configurationGroup name="invalid_formfield_message" path="/modules/forms/formfield_messages" locale="gl">
      <configuration name="disciplinary_date" path="disciplinary_action/end_date/bad_date">
        <value>A data de fin debe ser posterior á data de inicio.</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description">
      <configuration name="person_can_edit_child_form_disciplinary_action" locale="gl">
        <value>Pode editar as lesións e disciplinary_actions asignadas a unha persoa</value>
      </configuration>
      <configuration name="person_can_view_child_form_disciplinary_action" locale="gl">
        <value>Pode ollar as lesións e disciplinary_actions asignadas a unha persoa</value>
      </configuration>
      <configuration name="can_edit_database_list_disciplinary_action_type" locale="gl">
        <value>Editar a lista de tipos disciplinary_action do lugar ne traballo</value>
      </configuration>
      <configuration name="can_view_database_list_disciplinary_action_type" locale="gl">
        <value>Ollar a lista de tipos disciplinary_action no lugar de traballo</value>
      </configuration>
      <configuration name="can_edit_database_list_disciplinary_action_reason" locale="gl">
        <value>Editar a lista de tipos de motivo para as accións disciplinarias no lugar de traballo</value>
      </configuration>
      <configuration name="can_view_database_list_disciplinary_action_reason" locale="gl">
        <value>Ollar a lista de tipos de motivo para as accións disciplinarias no lugar de traballo</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="disciplinary_action">
          <configuration name="display" values="single" locale="gl">
            <value>Acción disciplinaria</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="disciplinary_action_type">
          <configuration name="display" values="single" locale="gl">
            <value>Tipo de acción disciplinaria</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="disciplinary_action_reason">
          <configuration name="display" values="single" locale="gl">
            <value>Motivo para a acción disciplinaria</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_DisciplinaryAction">
          <configurationGroup name="fields">
            <configurationGroup name="action_date">
              <configuration name="headers" type="delimited" locale="gl">
                <value>default:Data da discusión</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="disciplinary_action_type">
              <configuration name="headers" type="delimited" locale="gl">
                <value>default:Acción realizada</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="disciplinary_action_reason">
              <configuration name="headers" type="delimited" locale="gl">
                <value>default:Motivo para a acción</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="start_date">
              <configuration name="headers" type="delimited" locale="gl">
                <value>default:Inicio de aplicabilidade</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="end_date">
              <configuration name="headers" type="delimited" locale="gl">
                <value>default:Fin de aplicabilidade</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="notes">
              <configuration name="headers" type="delimited" locale="gl">
                <value>default:Notas</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="persons_present">
              <configuration name="headers" type="delimited" locale="gl">
                <value>default:Persoas presentes</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="editAction" path="/modules/disciplinary_action/page/editAction">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="gl">
            <value>Engadir/Actualizar a acción disciplinaria</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>