<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="disciplinary_action" path="/I2CE">
  <metadata>
    <version>4.3.0.1</version>
  </metadata>
  <configurationGroup name="disciplinary_action" path="/I2CE" locale="fr">
    <version>4.3.0.1</version>
    <configurationGroup name="invalid_formfield_message" path="/modules/forms/formfield_messages" locale="fr">
      <configuration name="disciplinary_date" path="disciplinary_action/end_date/bad_date">
        <value>La date de fin doit être postérieure à la date de début.</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description">
      <configuration name="person_can_edit_child_form_disciplinary_action" locale="fr">
        <value>Peut éditer les blessures sur le lieu de travail et les mesures disciplinaires attribuées à une personne</value>
      </configuration>
      <configuration name="person_can_view_child_form_disciplinary_action" locale="fr">
        <value>Peut afficher les blessures sur le lieu de travail et les mesures disciplinaires attribuées à une personne</value>
      </configuration>
      <configuration name="can_edit_database_list_disciplinary_action_type" locale="fr">
        <value>Editer la liste des types de mesures disciplinaires sur le lieu de travail</value>
      </configuration>
      <configuration name="can_view_database_list_disciplinary_action_type" locale="fr">
        <value>Afficher la liste des types d'actions disciplinaires</value>
      </configuration>
      <configuration name="can_edit_database_list_disciplinary_action_reason" locale="fr">
        <value>Modifier la liste des types de mesure disciplinaire sur le lieu de travail</value>
      </configuration>
      <configuration name="can_view_database_list_disciplinary_action_reason" locale="fr">
        <value>Afficher la liste des types de mesure disciplinaire sur le lieu de travail</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="disciplinary_action">
          <configuration name="display" values="single" locale="fr">
            <value>Mesure disciplinaire</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="disciplinary_action_type">
          <configuration name="display" values="single" locale="fr">
            <value>Type de mesure disciplinaire</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="disciplinary_action_reason">
          <configuration name="display" values="single" locale="fr">
            <value>Motif de la mesure disciplinaire</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_DisciplinaryAction">
          <configurationGroup name="fields">
            <configurationGroup name="action_date">
              <configuration name="headers" type="delimited" locale="fr">
                <value>default:Date de discussion</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="disciplinary_action_type">
              <configuration name="headers" type="delimited" locale="fr">
                <value>default:Mesure prise</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="disciplinary_action_reason">
              <configuration name="headers" type="delimited" locale="fr">
                <value>default:Motif d'Action</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="start_date">
              <configuration name="headers" type="delimited" locale="fr">
                <value>default:Début d’applicabilité</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="end_date">
              <configuration name="headers" type="delimited" locale="fr">
                <value>default:Fin d’applicabilité</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="notes">
              <configuration name="headers" type="delimited" locale="fr"></configuration>
            </configurationGroup>
            <configurationGroup name="persons_present">
              <configuration name="headers" type="delimited" locale="fr">
                <value>default:Personnes présentes</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="editAction" path="/modules/disciplinary_action/page/editAction">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="fr">
            <value>Ajouter/Actualiser une mesure disciplinaire</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>