<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="disciplinary_action" path="/I2CE">
  <metadata>
    <version>4.2.2.0.1</version>
  </metadata>
  <configurationGroup name="disciplinary_action" path="/I2CE" locale="oc">
    <version>4.2.0.1</version>
    <configurationGroup name="invalid_formfield_message" path="/modules/forms/formfield_messages" locale="oc">
      <configuration name="disciplinary_date" path="disciplinary_action/end_date/bad_date">
        <value>La data de fin deu èsser posteriora a la data de començament.</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description">
      <configuration name="person_can_edit_child_form_disciplinary_action" locale="oc">
        <value>Pòt editar las nafraduras sul luòc de trabalh e las mesuras disciplinàrias atribuidas a una persona</value>
      </configuration>
      <configuration name="person_can_view_child_form_disciplinary_action" locale="oc">
        <value>Pòt afichar las nafraduras sul luòc de trabalh e las mesuras disciplinàrias atribuidas a una persona</value>
      </configuration>
      <configuration name="can_edit_database_list_disciplinary_action_type" locale="oc">
        <value>Editar la lista dels tipes de mesuras disciplinàrias sul luòc de trabalh</value>
      </configuration>
      <configuration name="can_view_database_list_disciplinary_action_type" locale="oc">
        <value>Afichar la lista dels tipes d'accions disciplinàrias</value>
      </configuration>
      <configuration name="can_edit_database_list_disciplinary_action_reason" locale="oc">
        <value>Modificar la lista dels tipes de mesuras disciplinàrias sul luòc de trabalh</value>
      </configuration>
      <configuration name="can_view_database_list_disciplinary_action_reason" locale="oc">
        <value>Afichar la lista dels tipes de mesuras disciplinàrias sul luòc de trabalh</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="disciplinary_action">
          <configuration name="display" values="single" locale="oc">
            <value>Mesura disciplinària</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="disciplinary_action_type">
          <configuration name="display" values="single" locale="oc">
            <value>Tipe de mesura disciplinària</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="disciplinary_action_reason">
          <configuration name="display" values="single" locale="oc">
            <value>Motiu de la mesura disciplinària</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_DisciplinaryAction">
          <configurationGroup name="fields">
            <configurationGroup name="action_date">
              <configuration name="headers" type="delimited" locale="oc">
                <value>default:Data de discussion</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="disciplinary_action_type">
              <configuration name="headers" type="delimited" locale="oc">
                <value>default:Mesura presa</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="disciplinary_action_reason">
              <configuration name="headers" type="delimited" locale="oc">
                <value>default:Motiu d'Accion</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="start_date">
              <configuration name="headers" type="delimited" locale="oc">
                <value>default:Començament d’aplicabilitat</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="end_date">
              <configuration name="headers" type="delimited" locale="oc">
                <value>default:Fin d’aplicabilitat</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="notes">
              <configuration name="headers" type="delimited" locale="oc">
                <value>default:Remarcas</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="persons_present">
              <configuration name="headers" type="delimited" locale="oc">
                <value>default:Personas presentas</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="editAction" path="/modules/disciplinary_action/page/editAction">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="oc">
            <value>Apondre / Metre a jorn una mesura disciplinària</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>