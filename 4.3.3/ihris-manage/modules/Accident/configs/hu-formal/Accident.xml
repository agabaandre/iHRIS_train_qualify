<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="accident" path="/I2CE">
  <metadata>
    <version>4.2.2.0.1</version>
  </metadata>
  <configurationGroup name="accident" path="/I2CE" locale="hu-formal">
    <version>4.2.0.1</version>
    <configurationGroup name="invalid_formfield_message" path="/modules/forms/formfield_messages" locale="hu-formal">
      <configuration name="accident_date" path="accident/end_date/bad_date"></configuration>
    </configurationGroup>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description">
      <configuration name="person_can_edit_child_form_accident" locale="hu-formal">
        <value>Szerkesztheti a valamely személyhez rendelt munkahelyi sérüléseket és baleseteket</value>
      </configuration>
      <configuration name="person_can_view_child_form_accident" locale="hu-formal">
        <value>Megtekintheti a valamely személyhez rendelt munkahelyi sérüléseket és baleseteket</value>
      </configuration>
      <configuration name="can_edit_database_list_accident_type" locale="hu-formal">
        <value>A munkahelyi balesetek típusait tartalmazó lista szerkesztése</value>
      </configuration>
      <configuration name="can_view_database_list_accident_type" locale="hu-formal">
        <value>A munkahelyi balesetek típusait tartalmazó lista szerkesztése</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="accident">
          <configuration name="display" values="single" locale="hu-formal">
            <value>Baleset</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="accident_type">
          <configuration name="display" values="single" locale="hu-formal">
            <value>Munkahelyi baleset típusa</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="iHRIS_Accident">
          <configurationGroup name="fields">
            <configurationGroup name="occurence_date">
              <configuration name="headers" type="delimited" locale="hu-formal">
                <value>default:Esemény időpontja</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="accident_type">
              <configuration name="headers" type="delimited" locale="hu-formal">
                <value>default:Baleset típusa</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="start_date">
              <configuration name="headers" type="delimited" locale="hu-formal">
                <value>default:Alkalmazhatóság kezdete</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="end_date">
              <configuration name="headers" type="delimited" locale="hu-formal">
                <value>default:Alkalmazhatóság vége</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="followup">
              <configuration name="headers" type="delimited" locale="hu-formal">
                <value>default:Nyomon követése szükséges</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="persons_involved">
              <configuration name="headers" type="delimited" locale="hu-formal">
                <value>default:Érintett személyek</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="home" path="/modules/accident/page/home">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="hu-formal">
            <value>Munkahelyi baleset hozzáadása/frissítése</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>