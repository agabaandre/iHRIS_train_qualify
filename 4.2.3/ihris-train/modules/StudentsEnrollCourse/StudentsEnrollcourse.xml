<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="StudentsEnrollcourse">
  <metadata>
    <displayName>Students Semester Course Registration</displayName>
    <category>Application Component</category>
    <creator>Ally Shaban</creator>
    <email>allyshaban5@gmail.com</email>
    <className>iHRIS_Module_Enrollcourse</className>
    <description>Students Course Enrollment</description>
    <link>https://launchpad.net/ihris-train</link>
    <version>4.2.1.0</version>
    <path name="configs">
      <value>./configs</value>
    </path>
    <requirement name="Person">
      <atLeast version="4.2" />
      <lessThan version="4.3" />
    </requirement>
    <path name="templates">
      <value>./templates</value>
    </path>
    <path name="classes">
      <value>./lib</value>
    </path>
    <priority>300</priority>
  </metadata>
  <configurationGroup name="StudentsEnrollcourse" path="/I2CE">
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description" locale="en_US">
      <configuration name="person_can_view_child_form_enroll_course" locale="en_US">
        <value>Can view enroll course child form of a person</value>
      </configuration>
      <configuration name="person_can_edit_child_form_enroll_course" locale="en_US">
        <value>Can edit enroll course child forms of a person</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="person">
          <configurationGroup name="meta">
            <configuration name="child_forms" values="many">
              <status>uniquemerge:true</status>
              <value>enroll_course</value>
            </configuration>
          </configurationGroup>
        </configurationGroup>
        <configurationGroup name="enroll_course">
          <displayName>Enroll Course</displayName>
          <description>The Enroll Course Form</description>
          <configuration name="class" values="single">
            <displayName>Class Name</displayName>
            <description>The name of the class providing the form</description>
            <value>iHRIS_Enrollcourse</value>
          </configuration>
          <configuration name="display" values="single" locale="en_US">
            <displayName>Display name</displayName>
            <description>The display name for this form</description>
            <value>Register Courses</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <version>4.2.0.5</version>
        <configurationGroup name="iHRIS_Enrollcourse">
          <configuration name="extends">
            <displayName>The class this form extends</displayName>
            <value>I2CE_Form</value>
          </configuration>
          <configurationGroup name="fields">
            <displayName>The fields defined for this form</displayName>
            <configurationGroup name="training">
              <displayName>The field 'training'</displayName>
              <configuration name="formfield">
                <displayName>The form field type</displayName>
                <value>MAP_MULT</value>
              </configuration>
              <configuration name="headers" type="delimited" locale="en_US">
                <displayName>The headers for this field.</displayName>
                <value>default:Course</value>
              </configuration>
              <configuration name="required" type="boolean">
                <value>true</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="semester">
              <displayName>The field 'semester'</displayName>
              <configuration name="formfield">
                <displayName>The form field type</displayName>
                <value>MAP</value>
              </configuration>
              <configuration name="headers" type="delimited" locale="en_US">
                <displayName>The headers for this field.</displayName>
                <value>default:Semester</value>
              </configuration>
              <configuration name="required" type="boolean">
                <value>true</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="registration">
              <displayName>The field 'semester'</displayName>
              <configuration name="formfield">
                <displayName>The form field type</displayName>
                <value>MAP</value>
              </configuration>
              <configuration name="headers" type="delimited" locale="en_US">
                <displayName>The headers for this field.</displayName>
                <value>default:Registration</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="academic_year">
              <displayName>The field 'academic_year'</displayName>
              <configuration name="formfield">
                <displayName>The form field type</displayName>
                <value>MAP</value>
              </configuration>
              <configuration name="headers" type="delimited" locale="en_US">
                <displayName>The headers for this field.</displayName>
                <value>default:Academic Year</value>
              </configuration>
              <configuration name="required" type="boolean">
                <value>true</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="total_credits">
              <displayName>The field 'academic_year'</displayName>
              <configuration name="formfield">
                <displayName>The form field type</displayName>
                <value>INT</value>
              </configuration>
              <configuration name="headers" type="delimited" locale="en_US">
                <displayName>The headers for this field.</displayName>
                <value>default:Total Credits</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="date_enrolled">
              <displayName>The field 'date_enrolled'</displayName>
              <configuration name="formfield">
                <displayName>The form field type</displayName>
                <value>DATE_YMD</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
        <!--iHRIS_Enrollcourse-->
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="page">
      <version>4.2.0.2</version>
      <configurationGroup name="enroll_course">
        <displayName>Course Enrollment Page</displayName>
        <description>The page 'enroll_course' which has the action of: Students Course Enrollment</description>
        <configuration name="style" values="single">
          <displayName>Page Style</displayName>
          <description>The Page Style</description>
          <value>ihris_common_page_form_parent_person</value>
        </configuration>
        <configuration name="class" values="single">
          <displayName>Page Class</displayName>
          <description>The class responsible for displaying this page</description>
          <status>required:true</status>
          <value>iHRIS_PageFormEnrollcourse</value>
        </configuration>
        <configurationGroup name="args">
          <displayName>Page Options</displayName>
          <description>The options that control the access and display of all pages</description>
          <configuration name="defaultHTMLFile" values="single">
            <value>form_enroll_course.html</value>
          </configuration>
          <configuration name="title" values="single" locale="en_US">
            <displayName>Page Title</displayName>
            <description>Page Title</description>
            <status>required:true</status>
            <value>Add/Update Course</value>
          </configuration>
          <configuration name="page_form" values="single">
            <displayName>Form</displayName>
            <description>The form this page is using</description>
            <status>required:true</status>
            <value>enroll_course</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="enroll_course_process">
        <displayName>Registration Page</displayName>
        <description>The page 'enroll_course_process' which has the action of: Adding Students Results</description>
        <configuration name="class" values="single">
          <displayName>Page Class</displayName>
          <description>The class responsible for displaying this page</description>
          <status>required:true</status>
          <value>iHRIS_PageFormEnrollcourseProcess</value>
        </configuration>
        <configuration name="style">
          <displayName>Style</displayName>
          <value>shell</value>
        </configuration>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>